{
	"manifest_version": 2,

	"name": "signTextLSF",
	"description": "This extension emulates Netscape's crypto.signText() using LSF.",
	"version": "1.0",
	"icons": {
		"40": "icons/signTextLSF-40.png",
		"48": "icons/signTextLSF-48.png",
		"64": "icons/signTextLSF-64.png",
		"128": "icons/signTextLSF-128.png"
	},

	"content_scripts": [{
		"matches": [
			"*://*/*"
		],
		"js": [
			"contentscript.js"
		]
	}],
	"permissions": [
		"http://127.0.0.1:8090"
	],
	"web_accessible_resources": [
		"script.js"
	]
}
